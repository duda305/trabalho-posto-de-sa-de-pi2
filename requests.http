@host = http://localhost:5555
@usuarioId = {{createUsuario.response.body.$.id}}
@medicoId = {{createMedico.response.body.$.id}}
@especialidadeId = {{createEspecialidade.response.body.$.id}}
@pacienteId = {{createPaciente.response.body.$.id}}
@consultaId = {{createConsulta.response.body.$.id}}
@medicamentoId = {{createMedicamento.response.body.$.id}}
@token = {{signin.response.body.$.token}}

### ==============================
### USUARIOS
### ==============================

# Create User
POST {{host}}/usuarios
Content-Type: application/json

{
  "nome": "Maria Almeida",
  "email": "maria.almeida@hospitalpb.com",
  "senha": "senha789",
  "data_cadastro": "2025-02-22"
}

# Signin User
POST {{host}}/signin
Content-Type: application/json

{
  "email": "maria.almeida@hospitalpb.com",
  "senha": "senha789"
}

# Read User (with token)
GET {{host}}/usuarios/{{usuarioId}}
Authorization: bearer {{token}}

# Update User
PUT {{host}}/usuarios/{{usuarioId}}
Authorization: bearer {{token}}
Content-Type: application/json

{
  "nome": "Maria Almeida Silva",
  "email": "maria.silva@hospitalpb.com",
  "senha": "novaSenha123",
  "data_cadastro": "2025-02-22"
}

# Delete User
DELETE {{host}}/usuarios/{{usuarioId}}
Authorization: bearer {{token}}

